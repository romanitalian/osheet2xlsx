# Nancy configuration file
# https://github.com/sonatype-nexus-community/nancy

# Ignore specific vulnerabilities or patterns
ignore:
  - "os.Stat"
  - "os.Open"
  - "os.OpenFile"
  - "os.Remove"
  - "os.ReadDir"
  - "os.Lstat"
  - "os.Getwd"
  - "os.NewFile"
  - "os.MkdirAll"
  - "filepath.Abs"
  - "filepath.Walk"
  - "filepath.WalkDir"
  - "filepath.Glob"

# Skip update checks
skip-update-check: true

# Quiet mode
quiet: true

# Output format
output: text
